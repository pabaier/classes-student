-#  This file is app/views/movies/index.html.haml
%h1 All Students

%table#students
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Graduation Date
      %th Status
      
  %tbody
    - @students.each do |student|
      %tr
        %td= student.first_name 
        %td= student.last_name
        %td= student.email
        %td= student.graduation_date
        %td= student.status

= link_to 'Add new student', new_student_path