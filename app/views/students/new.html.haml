%h1 Create New Student

= form_tag students_path do

  = label :student, :first_name, 'First Name'
  = text_field :student, 'first_name'
  
  = label :student, :middle_initial, 'Middle Initial'
  = text_field :student, 'middle_initial'
  
  = label :student, :last_name, 'Last Name'
  = text_field :student, 'last_name'

  = label :student, :email, 'Email'
  = text_field :student, 'email'
  
  =label :student, :graduation_date, 'Graduation Date'
  = date_select :student, :graduation_date
  
  = label :student, :status, 'Status'
  = select :student, :status, ['Student','Alumni']

  = submit_tag 'Confirm'