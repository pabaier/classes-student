.row
  .back_nav= link_to 'Back', users_path
  .logout= link_to 'Log out', login_path


%h2 Create New user

= form_tag users_path do

  .field
    = label :user, :first_name, 'First Name'
    = text_field :user, 'first_name'
  
  .field
    = label :user, :last_name, 'Last Name'
    = text_field :user, 'last_name'

  .field
    = label :user, :email, 'Email'
    = text_field :user, 'email'
    
  .field
    = label :user, :password, 'Password'
    = text_field :user, 'password'  
  
  .field
    =label :user, :graduation_date, 'Graduation Date'
    = date_select :user, :graduation_date
  
  .field
    = label :user, :status, 'Status'
    = select :user, :status, ['Student','Alumni']
    
  .field
    - @all_groups.each do |group|
      = group.title
      %label{ :for => "groups_#{group.id}"}
      = check_box_tag "groups[#{group.title}]", group.id, :id => "groups_#{group.id}"

  = submit_tag 'Confirm'
  
.bottom-margin
  