%h1 All Users

%table#users
  %thead
    %tr
      %th First Name
      %th Last Name
      %th Email
      %th Password
      %th Status
      %th Graduation Date
        
  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.email
        %td= user.password
        %td= user.status
        %td= user.graduation_date
        %td= button_to "Delete User", {:action => "show", :controller => 'users', :id => user.email, :requirements => { :id => /[0-z\.]+/ }}, method: :delete



= link_to 'Create new user', new_user_path

%p
= link_to 'Return to groups', groups_path