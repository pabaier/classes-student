-# edit.html.haml using partial

%h1 Edit Student Subscription

= form_for(@user) do |f|
  .field
    = f.label :first_name
    
    = f.text_field :first_name
  .field
    = f.label "Groups"
    
    = f.collection_check_boxes :group_ids, Group.all, :id, :title do |b|
      .collection-check-box
        = b.check_box
        = b.label
  .actions
    = f.submit

